<div class="container">
  <%= simple_form_for pet do |f| %>
    <%= f.input :name %>
    <%= f.input :color %>
    <%= f.input :species, as: :select, collection: Pet::SPECIES  %>
    <%= f.input :found_on %>
    <%= f.input :injured, as: :radio_buttons %>
    <%= f.button :submit %>
  <% end %>
</div>